==Begin==
:SpriteCreate	name="background" type=image
:SpriteSet		name="background" image="Logo.png" alpha=0 rect=[0,0,0,0]
:BehaviourAdd	name="background" behaviour="fader" type="AnimFadeIn" speed=1

{
	if scene.background.alpha < 1 then
		Script.jump(Script.getNextPos() - 1)
	end
}

:SpriteCreate	name="loadingStage" type=text
:SpriteSet		name="loadingStage" anchor=[0,0.7,1,0.7]
:SpriteSet		name="loadingStage" rect=[-50,50,0,50]
:SpriteSet		name="loadingStage" text="测"
:wait time=0.1
:SpriteSet		name="loadingStage" text="测试"
:wait time=0.1
:SpriteSet		name="loadingStage" text="测试一"
:wait time=0.1
:SpriteSet		name="loadingStage" text="测试一下"
:wait time=0.1
:SpriteSet		name="loadingStage" text="测试一下"
:wait time=0.3
:SpriteSet		name="loadingStage" text="能不能正常加载文字"
:wait time=0.1
:SpriteSet		name="loadingStage" size=[200,100] pos=[{scene.loadingStage.pos[1] + 20},{scene.loadingStage.pos[2] - 20}]
:wait time=0.1
:SpriteSet		name="loadingStage" size=[120,100] pos=[{scene.loadingStage.pos[1] - 20},{scene.loadingStage.pos[2] + 20}]

:BehaviourRemove	name="background" behaviour="fader"
:Wait time=3
:BehaviourAdd		name="background" behaviour="fader" type="AnimFadeIn" speed=-1

:SpriteRemove	name="loadingStage"

{
	if scene.background.alpha > 0 then
		Script.jump(Script.getNextPos() - 1)
	end
}

:SpriteRemove name="background"

:Goto pos="Exit"

==Exit==
