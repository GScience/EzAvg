==Begin==
:SpriteCreate	name="background" type=image
:SpriteSet		name="background" image="Logo.png" alpha=0 rect=[0,0,0,0]
:BehaviourAdd	name="background" behaviour="fader" type="AnimFadeIn" speed=1

{
	if scene.background.alpha < 1 then
		Script.jump(Script.getNextPos() - 1)
	end
}

:SpriteCreate	name="loadingStage" type=text anchor=[0,0.7,1,0.7] layout=center
:SpriteSet		name="loadingStage" rect=[-50,150,-50,150]
:BehaviourAdd	name="loadingStage" behaviour="textPrinter" type="AnimTextPrinter" text="能不能正常加载文字，文字布局测试，支持在运行脚本的同时更改文本布局" speed=10
:wait time=0.5
:SpriteSet		name="loadingStage" anchor=[0,0.7,1,0.7] layout=right
:wait time=0.5
:SpriteSet		name="loadingStage" anchor=[0,0.7,1,0.7] layout=left
:wait time=0.5
:SpriteSet		name="loadingStage" anchor=[0,0.7,1,0.7] layout=right
:wait time=0.5
:SpriteSet		name="loadingStage" anchor=[0,0.7,1,0.7] layout=center
:wait time=0.5

:BehaviourRemove	name="background" behaviour="fader"
:Wait time=3
:BehaviourAdd		name="background" behaviour="fader" type="AnimFadeIn" speed=-1

:SpriteRemove	name="loadingStage"

{
	if scene.background.alpha > 0 then
		Script.jump(Script.getNextPos() - 1)
	end
}

:SpriteRemove name="background"

:Goto pos="Exit"

==Exit==
