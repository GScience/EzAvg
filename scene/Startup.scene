# 背景
:SpriteCreate	sprite="background" type=image image="Logo.png" alpha=0 rect=[0,0,0,0] zOrder=-1
:BehaviourAdd	sprite="background" behaviour="fader" type="AnimFadeIn" speed=1

# 等待背景加载完成
:Wait sprite="background" behaviour="fader"

# 版本号信息
:SpriteCreate	sprite="version" type=text anchor=[0,1,1,1] rect=[-25,0,0,0] layout=center fontSize=15 alpha=0
:SpriteSet		sprite="version" color=[0,0,0] text="Version beta 1.0.0"
:BehaviourAdd	sprite="version" behaviour="fader" type="AnimFadeIn" speed=1

# 加载资源缓存
:SpriteCreate	sprite="loadingStage" type=text anchor=[0,0.8,1,0.8] layout=center fontSize=24
:SpriteSet		sprite="loadingStage" color=[0,0,1] shadowColor=[0,0,0.8,0.5]
:SpriteSet		sprite="loadingStage" rect=[-50,150,-50,150]
:SpriteSet		sprite="loadingStage" text="加载资源中"

:Wait time=5
:SpriteSet		sprite="loadingStage" text="加载完毕"
:Wait time=1

:BehaviourAdd	sprite="background" behaviour="fader" type="AnimFadeIn" speed=-1
:SpriteRemove	sprite="loadingStage"

# 等待最后淡出
:Wait sprite="background" behaviour="fader"

:SpriteRemove sprite="background"